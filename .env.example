# Backend Configuration
# PostgreSQL connection string
# Format: postgresql+psycopg2://username:password@host:port/database
DATABASE_URL=postgresql+psycopg2://postgres:postgres@localhost:5432/procguard

# Enable/disable AI features (requires OpenAI API key if enabled)
AI_ENABLED=false

# OpenAI API key (only needed if AI_ENABLED=true)
# OPENAI_API_KEY=sk-...

# Environment (development, staging, production)
ENVIRONMENT=development

# CORS Configuration (comma-separated list of allowed origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Run database migrations on startup (true/false)
RUN_MIGRATIONS=false

# Frontend Configuration
# Backend API URL
# For local development: http://localhost:8000
# For Vercel deployment: /api
NEXT_PUBLIC_API_URL=http://localhost:8000

# Optional: Azure Storage (for evidence/document storage)
# AZURE_STORAGE_CONNECTION_STRING=...
# AZURE_STORAGE_CONTAINER_NAME=procguard-evidence
